[color]
ui = auto

[color "branch"] 
current = yellow reverse 
local = yellow 
remote = green

[color "diff"] 
meta = yellow bold 
frag = magenta bold 
old = red bold 
new = green bold
whitespace = red reverse

[color "status"] 
added = yellow 
changed = green 
untracked = cyan

[alias]
alias     = !git config --list | grep 'alias\\.' | sed 's/alias\\.\\([^=]*\\)=\\(.*\\)/\\1\\ = \\2/' | sort
amend     = commit --amend --no-edit
br        = branch
cb        = checkout --conflict=merge
ci        = commit
co        = checkout
current   = rev-parse --abbrev-ref HEAD
d         = diff
discard   = !git reset --hard && git clean -df
ds        = diff --staged
exec      = "!exec "
fixup     = commit --fixup
ign       = ls-files -o -i --exclude-standard
ignore    = !([ ! -e .gitignore ] && touch .gitignore) | echo $1 >>.gitignore
l         = log -1
lg        = log -p
ll        = log --graph --pretty=line @{u}^..
lol       = log --graph --pretty=line
lola      = log --graph --pretty=line --all
ls        = ls-files
patch     = add -p
prune     = !git reflog expire --expire=now --all && git gc --prune=now
root      = rev-parse --show-toplevel
search    = log -S
st        = status -sbu
tmpbranch = !git checkout -b "tmp-$(date -Ins | md5sum | cut -b-8)"

[pretty]
line = %C(auto)%h%d%Creset %s %Cgreen(%ar) %C(bold blue)<%an>%Creset

[core]
filemode = true
lagallrefupdates = true
whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
excludesfile = ~/.gitignore
autocrlf = input
safecrlf = true

[http] 
postBuffer = 524288000 
receivepack = true

[diff]
algorithm = myers
mnemonicprefix = true

[push]
default = simple

[mergetool]
prompt = false

[rebase]
autosquash = true

[branch]
autosetupmerge = always

[rerere]
enabled = true

[user]
name = Username
email = username@subdomain.domain.tld
